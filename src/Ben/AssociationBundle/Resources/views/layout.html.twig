{% block container %}
<body>
{% block header %}
<header class="visible-print print-header hide">
  <div class="col-xs-1"><img src="{{ asset(app_config.org_logo) }}" alt="logo"/></div>
  <div class="col-xs-8">
  <div class="title">
    <h1>{{ app_config.org_name }}</h1>  
  </div>
  </div>
  <div class="clearfix"></div>
</header>
    <header id="adminbar" class="header hidden-print navbar">
        <div id="logo"><img src="{{ asset(app_config.org_logo) }}" alt="logo" class="img-small"> <span>{{ app_config.org_name }}</span></div>

        <div class="dropdown pull-right user-profile">
          <a href="#" id="drop3" role="button" class="dropdown-toggle" data-toggle="dropdown">
          <img class="img-small" src="{{ asset( app.user.avatar)}}" alt="{{ app.user.username }}">
          {{ app.user.profile.fullName }} <span class="glyphicon glyphicon-chevron-down"></span></a>
            <ul class="dropdown-menu">
                <li>
                    <div class="navbar-content">
                        <div class="row">
                            <div class="col-md-5">
                                <img src="{{ asset( app.user.avatar)}}" alt="Alternate Text" class="img-responsive" />
                                <div class="clearfix"></div>
                                <p></p>
                            </div>
                            <div class="col-md-7">
                                <span>{{ app.user.username }}</span>
                                <p class="text-muted small">{{ app.user.email }}</p>
                                <div class="divider"></div>
                                <a href="{{ path('ben_profile_edit', { 'name': app.user.username}) }}" class="btn btn-primary btn-sm">Afficher mon profil</a>
                            </div>
                        </div>
                    </div>
                    <div class="navbar-footer">
                        <div class="navbar-footer-content">
                            <div class="row">
                                <div class="col-md-6">
                                    <a href="{{ path('fos_user_profile_edit') }}" class="btn btn-default btn-sm">Compte</a>
                                </div>
                                <div class="col-md-6">
                                    <a href="{{ path('fos_user_security_logout') }}" class="btn btn-default btn-sm pull-right">DÃ©connexion</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </li>
            </ul>
        </div>
        <ul class="nav user-menu visible-desktop pull-right">
            <li><a href="{{ path('fos_message_inbox') }}"  data-toggle="tooltip" title="messages" data-placement="bottom">
                <span class="glyphicon glyphicon-envelope"></span>
                {% if fos_message_nb_unread() != 0 %}<span class="badge badge-important">{{ fos_message_nb_unread() }}</span>{% endif %}
                </a>
            </li>
            <li><a href="#" title="Support" data-toggle="tooltip" title="notifications" data-placement="bottom"><span class="glyphicon glyphicon-bullhorn"></span><span class="badge badge-important">4</span></a></li>
        </ul>
    </header>

    {% include "BenAssociationBundle:Default:menu.html.twig" %}
{% endblock header %}
    <section class="wrap">
        <div class="container">    

        {% include "BenAssociationBundle:Default:flashes.html.twig" %}
        {% block breadcrumb %} {# 
            <ul class="breadcrumb">
                <li><a href="#fakelink">Home</a></li>
                <li><a href="#fakelink">Directory</a></li>
                <li class="active"><a href="#">Current Article</a></li>
            </ul> #}
        {% endblock %}

        {% block body %}{% endblock %}
        </div>
    </section>  

    {% block javascripts %}
    <script src="{{ asset('js/jquery-1.8.3.min.js') }}"></script>
    <script src="{{ asset('js/jquery-ui-1.10.3.custom.min.js') }}"></script>
    <script src="{{ asset('js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('js/bootstrap-select.js') }}"></script>
    <script src="{{ asset('js/bootstrap-switch.js') }}"></script>
    <script src="{{ asset('js/flatui-checkbox.js') }}"></script>
    <script src="{{ asset('js/flatui-radio.js') }}"></script>
    <script src="{{ asset('js/application.js') }}"></script>
