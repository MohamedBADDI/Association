{% extends "BenAssociationBundle::layout.html.twig" %}
{% block title %}
Tableau de bord | {{ parent() }}
{% endblock %}
{% block body %}

<h2><span class="fui-tag"></span> Cotisation N° #{{ entity.id }}</h2>

<div class="row">
    <div class="col-sm-9">
<table class="table table-bordered table-striped">
    <tbody>
        <tr>
            <th>Adhérant</th>
            <td><a href="{{ path('ben_show_user', {'id': entity.user.id }) }}">{{ entity.user.profile.fullName }}</a></td>
        </tr>
        <tr>
            <th>CIN</th>
            <td>{{ entity.user.profile.cin }}</td>
        </tr>
        <tr>
            <th>Montant</th>
            <td>{{ entity.price }}</td>
        </tr>
        <tr>
            <th>Type</th>
            <td>{{ entity.type }}</td>
        </tr>
        <tr>
            <th>Date début</th>
            <td>{{ entity.datefrom|date('Y-m-d') }}</td>
        </tr>
        <tr>
            <th>Date fin</th>
            <td>{{ entity.dateto|date('Y-m-d') }}</td>
        </tr>
        <tr>
            <th>Commentaire</th>
            <td>{{ entity.description }}</td>
        </tr>
    </tbody>
</table>
  <div class="pull-right visible-print">
      Fait à {{ app_config.org_city }} le {{ 'now'|date('d/m/Y')}}
  </div>
</div> 
<div class="col-md-3">
    <form action="{{ path('cotisation_delete', { 'id': entity.id }) }}" method="post">
    {{ form_widget(delete_form) }}
    <a id="submitEditForm" class="btn btn-embossed btn-primary btn-block" href="{{ path('cotisation_edit', { 'id': entity.id }) }}">
        <span class="fui-new"></span> Mettre à jour
    </a>
    <a id="btnPrint" href="#" class="btn btn-embossed btn-inverse btn-block"><span class="glyphicon glyphicon-print"></span> imprimer le reçus</a>
    <a class="btn btn-embossed btn-inverse btn-block " href="{{ path('cotisation') }}">
        <span class="fui-list-bulleted"></span> Revenir à la liste
    </a>
    <button type="submit" class="btn btn-embossed btn-danger btn-block"><span class="fui-cross"></span> Supprimer </button>
    </form>
</div>
<div class="clearfix"></div>
</div>
{% endblock body %}

