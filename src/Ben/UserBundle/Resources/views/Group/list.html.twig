{% block fos_user_content %}
     
<h2><span class="fui-user"></span> Gestion des Groupes</h2>
<div class="row">
    <div class="col-md-8">     
     <table class="table table-hover table-bordered">
        <thead>
            <tr>
                <th class="col-sm-1">#</th>
                <th class="col-sm-3">Nom du groupe</th>
                <th class="col-sm-3">Nombre d'utilisateur dans ce groupe</th>
                <th class="col-sm-2">action</th>
            </tr>
        </thead>
        <tbody id="dataContainer">
        {% for entity in groups %}
        <tr>
            <td>{{ entity.getId() }}</td>
            <td>{{ entity.getName() }}</td>
            <td>{{ entity.getUsers()|length }}</td>
            <td>
                <a class="btn btn-embossed btn-primary showuser btn-xs" href="{{ path('fos_user_group_show', {groupname: entity.name }) }}" ><span class="fui-search"></span></a>
                <a class="btn btn-embossed btn-info btn-xs" href="{{ path('fos_user_group_edit', {groupname: entity.name }) }}" data-toggle="tooltip" title="modifier"><span class="fui-new"></span></a>
                <a class="btn btn-embossed btn-danger btn-xs"  href="{{ path('fos_user_group_delete', {groupname: entity.name }) }}" data-toggle="tooltip" title="Supprimer"><span class="fui-cross"></span></a>
            </td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
    <div><strong>Total:</strong> <em>{{ groups|length }} Groupes</em></div>
    </div>
    {% include "FOSUserBundle:Group:new.html.twig" %}
</div>


{% endblock fos_user_content %}

