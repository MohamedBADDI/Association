
<ul class="threadslist">
    {% for thread in threads %}
    {% set sender=thread.participant %}
    <li class="thread-item {% if not fos_message_is_read(thread)%}unread{% endif %}" id="message_{{ thread.id }}">
        <div class="col-md-2">
        <div class="row">            
        <div class="col-md-11">
            <a href="{{ path('ben_show_user', { 'id': sender.id }) }}" title="{{ sender }}">
            <img src="{{ asset( sender.avatar)}}" class="img-responsive img-thumbnail"></a>
        </div>
        </div>
        </div>
        <div class="col-md-10">
            <div class="message-label">
                <p class="pull-right muted"><small>{{ thread.lastMessage.createdAt|time_ago_in_words }}</small><br>
                    <small>{{ thread.messages|length }} {% if thread.messages|length == 1  %}message{% else %}messages{% endif %}</small>
                </p>
                <h6><a href="{{  path('fos_message_thread_view', {'threadId': thread.id}) }}#message_{{ thread.lastMessage.id }}" class="link-main">{{ thread.subject }}</a></h6>
            </div>
            <p class="muted"><small>{{ thread.lastMessage.body }}</small> ...</p>
        </div>
        <div class="clearfix"></div>
    </li>
    {% else %}
    <li class="thread-item">
        <div class="col-right">
            <div class="body-content" >
                <p>Pas encore de messages</p>
            </div>
        </div>
    </li>
    {% endfor %}
</ul>